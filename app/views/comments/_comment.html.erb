<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-12">
          <% @comments.each do |c| %>
            <div>
              <%= c.content %>
              <% if current_user && current_user.id == c.user.id %><br>
              <%= link_to "delete", blog_comments_path(blog_id: @blog, id: c.id),method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
              <% end %>
              <br><br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>