<% unless current_user.is_a? GuestUser %>
  <%= form_for [@blog, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %><br>
      <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>